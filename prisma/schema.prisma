// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model FAQ {
  id        Int      @id @default(autoincrement())
  question  String
  answer    String
  slug      String?
  pageTitle String?
  version   String   @default("Public") // "Public", "Catholic", or empty for both
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Resource {
  id           Int      @id @default(autoincrement())
  title        String
  slug         String   @unique
  description  String?
  thumbnail    String?  // Image URL
  fileUrl      String?  // Direct file URL
  category     String?  // Operational, Advertising, Public, Tutorials
  resourceType String?  // PDF, Video, Image, etc.
  embedCode    String?  // For YouTube/Loom embeds
  featured     Boolean  @default(false)
  hasDetails   Boolean  @default(false)
  order        Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Blog {
  id              Int       @id @default(autoincrement())
  title           String
  slug            String    @unique
  content         String    // Rich HTML content
  summary         String?   // Short description/excerpt
  thumbnail       String?   // Main image URL
  thumbnailSmall  String?   // Small thumbnail URL
  category        String?   // Catholic, Public, etc.
  color           String?   // Accent color for the post
  embedHtml       String?   // Custom embed HTML content
  featured        Boolean   @default(false)
  archived        Boolean   @default(false)
  publishedAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
